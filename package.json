{
  "name": "epicflare",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "description": "A starter and reference for building full stack web applications",
  "scripts": {
    "dev": "bun cli.ts dev",
    "cli": "bun cli.ts",
    "dev:client": "esbuild client/entry.tsx --bundle --format=esm --target=es2022 --outdir=public --entry-names=client-entry --chunk-names=assets/[name] --asset-names=assets/[name] --jsx=automatic --jsx-import-source=remix/component --watch",
    "dev:worker": "wrangler dev --local",
    "deploy": "bun run build && wrangler deploy",
    "build:client": "esbuild client/entry.tsx --bundle --format=esm --target=es2022 --outdir=public --entry-names=client-entry --chunk-names=assets/[name] --asset-names=assets/[name] --jsx=automatic --jsx-import-source=remix/component",
    "build": "bun run build:client && wrangler build",
    "lint": "oxlint .",
    "lint:fix": "oxlint . --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "wrangler dev --local",
    "generate-types": "wrangler types ./types/worker-configuration.d.ts",
    "pretypecheck": "bun run generate-types",
    "typecheck": "tsc --noEmit",
    "inspect": "inspector",
    "validate": "concurrently --kill-others-on-fail -n format,lint,build,typecheck -c green,yellow,blue,magenta \"npm run format:check\" \"npm run lint:fix\" \"npm run build\" \"npm run typecheck\"",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:install": "playwright install --with-deps"
  },
  "devDependencies": {
    "@epic-web/config": "^1.22.0",
    "@mcpjam/inspector": "^1.5.12",
    "@playwright/test": "^1.58.1",
    "@types/bun": "^1.3.8",
    "concurrently": "^9.2.1",
    "esbuild": "^0.25.10",
    "oxlint": "^1.43.0",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.62.0"
  },
  "prettier": "@epic-web/config/prettier",
  "dependencies": {
    "@epic-web/invariant": "^1.0.0",
    "@mcp-ui/server": "6.0.0",
    "@modelcontextprotocol/ext-apps": "^1.0.1",
    "@modelcontextprotocol/sdk": "^1.26.0",
    "agents": "^0.3.10",
    "remix": "3.0.0-alpha.2",
    "zod": "^4.3.6"
  }
}
